#!/usr/bin/env ruby

require 'voxtur'

release_tgz = ARGV[0]
product_dir = ARGV[1]
s3_path = ARGV[2]

def print_usage_instructions_and_exit
  puts %Q(Usage:

voxtur <path/to/release-123.tgz> <path/to/p-myproduct> [<s3_path>])
  exit 1
end

print_usage_instructions_and_exit unless ARGV.length >= 2

Voxtur::Command.new(release_tgz, product_dir, s3_path).execute!
