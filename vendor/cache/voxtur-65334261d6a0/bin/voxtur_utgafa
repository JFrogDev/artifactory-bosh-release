#!/usr/bin/env ruby

require 'voxtur'

product_dir = ARGV[0]
product_version = ARGV[1]

def print_usage_instructions_and_exit
  puts %Q(Usage:

voxtur_utgafa <path/to/p-myproduct> <product\ version>)
  exit 1
end

print_usage_instructions_and_exit unless ARGV.length == 2

Voxtur::UpdateProductVersionCommand.new(product_dir, product_version).execute!
